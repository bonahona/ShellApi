{
  "Application": {
    "DefaultController": "Projects",
    "DefaultAction": "Index",
    "DefaultLayout": "Default",
    "NotFoundController" : "Projects",
    "NotFoundAction": "NotFound"
  },
  "Debug":{
    "DieOnRoutingError": false,
    "DontCacheModels": false
  },
  "Logging": {
    "FileDirectory": "/logs/",
    "Loggers": [
      {
        "FileLog": {
          "Name": "Default",
          "File": "default.log"
        }
      },
      {
        "DatabaseLog":{
          "Name": "DbLog"
        }
      }
    ]
  }
}